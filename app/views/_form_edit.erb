<form  id='edit' action='/post/<%= @post.id%>' method='post'>
  <input type='hidden' name="_method" value="put">
  <input name='title' type='text' placeholder='<%= @post.title %>'><br>
  <textarea name='body' placeholder='<%= @post.body %>'></textarea><br>
  <input name='tags' type='text' placeholder='<%= @tags %>'><br>
  <input type='submit' value='submit'>
</form>
